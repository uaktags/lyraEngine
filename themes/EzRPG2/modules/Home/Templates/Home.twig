{% extends 'layout.twig' %}
{% block heading %}
    <h1>{{ pageTitle }}</h1>
{% endblock %}
{% block content_left %}
        <p>
            <strong>Name</strong>: {{ player.title }}<br />
            <strong>Email</strong>: {{ player.email }}<br />
            <strong>Registered</strong>: {{ player.registered }}<br />
            <strong>Kills/Deaths</strong>: 0/0<br />
            <br />

            <?php if (1) { ?>
            You have stat points left over!<br />
            <a href="{{ site.url }}/StatPoints"><strong>Spend them now!</strong></a>
            <?php } else { ?>
            You have no extra stat points to spend.
            <?php } ?>
        </p>
{% endblock %}
{% block content_right %}
        <p>
            <strong>Level</strong>: {{ player.level|default(1) }}<br />
            <strong>Gold</strong>: {{ PlayerStats.Gold|default(0) }}<br />
            <br />
            <strong>Strength</strong>: {{ PlayerStats.Strength|default(0) }}<br />
            <strong>Endurance</strong>: {{ PlayerStats.Endurance|default(0) }}<br />
            <strong>Intelligence</strong>: {{ PlayerStats.Intelligence|default(0) }}<br />
            <strong>Dexterity</strong>: {{ PlayerStats.Dexterity|default(0) }}<br />
            <strong>Race</strong>: {{ PlayerStats.Race }}<br />
        </p>
{% endblock %}
