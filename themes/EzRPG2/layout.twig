{% import 'menu.twig' as menusystem %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="description" content="lyraEngine, the free, open source browser-based game engine!"/>
    <meta name="keywords" content=""/>
    {% set path = config.site.url ~ '/themes/' ~ config.site.theme ~ '/' %}
    <!-- FONT -->
    <link href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">
    <!-- CSS -->
    <link rel="stylesheet" href="{{ path }}css/normalize.css">
    <link rel="stylesheet" href="{{ path }}css/skeleton.css">
    <link type="text/css" rel="stylesheet" href="{{ path }}css/style.css">
    <script src="{{ path }}js/lib/ext/jquery/jquery.1.8.1.min.js"></script>
    <script src="{{ path }}js/lib/ext/jquery/plugins/run.js"></script>
    <script src="{{ path }}js/lib/ext/clock.js"></script>
    <link rel="shortcut icon" href="{{ path }}favicon.ico" type="image/x-icon">
    <title>lyraEngine | ezRPG2.0 Theme</title>
    <script>
        $(document).ready(function () {
            updateClock();
            setInterval('updateClock()', 1000);
        });
    </script>
</head>
<body>

<div id="wrapper" class="container">
    <div class="row" id="header">
            <div class="six columns">
                <span id="title"><a href="./">lyraEngine</a></span>
            </div>
            <div class="six columns" id="time">
                <div id="clock"></div>
                <strong>Players Online</strong>: {{ PLAYERS_ONLINE }}
            </div>
    </div>
    <div class ="row">
        <div id="nav">
			<ul>
                {{ menusystem.build_menu(0, menu, 'Main_Top', _context) }}
			</ul>
        </div>
    </div>

    <div id="body_wrap">
        <div class="row">
            {% if msg %}{{ msg|raw }} {% endif %}
        </div>
        <div id="body">
            <div class="row">
                <div class="eight columns">
                {% block heading %}
                    <h4>{{ pageTitle }}</h4>
                {% endblock %}
                {% block content %}
                    {% block content_left %}
                        <p>
                            Welcome to lyraEngine! Login now!<br/>
                        </p>
                    {% endblock %}
                </div>
                <div class="four columns">
                    {% block content_right %}
                        <form method="post" action="Login" name="login">
                            <label for="username">Username</label>
                            <input type="text" name="username"/>

                            <label for="password">Password</label>
                            <input type="password" name="password"/>

                            <input name="login" type="submit" class="button" value="Login">
                        </form>
                    {% endblock %}
                </div>
                {% endblock %}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="twelve columns">
            <div id="footer"></div>

            <div id="copyright">
                <a href="Legal">Terms of Service</a> | <a href="Privacy">Privacy Policy</a><br/>
                Copyright &copy; 2015 <a href="Index" target="_parent"><strong>lyraEngine</strong></a>.<br/>
                <small>Powered by <a href="//lyraengine.com" target="_blank">lyraEngine</a>.</small>
                <br/>
                <small>Theme: <a href="//lyraengine.com" target="_blank">ezRPG 2.0 (discontinued)</a>.</small>
                <br/>
            </div>
        </div>
    </div>
</div>
</body>

</html>
